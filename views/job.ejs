<form method="POST"
  action="<%= job ? '/jobs/update/' + job._id : '/jobs' %>">

  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <input name="company" value="<%= job?.company || '' %>" placeholder="Company">
  <input name="position" value="<%= job?.position || '' %>" placeholder="Position">

  <select name="status">
    <option value="pending">Pending</option>
    <option value="interview">Interview</option>
    <option value="declined">Declined</option>
  </select>

  <button><%= job ? "Update" : "Create" %></button>
</form>